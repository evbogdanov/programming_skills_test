{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"curly": 2,
		"no-console": 0,
		"no-else-return": "error",
		"keyword-spacing": [2, {"after": true}],
		"space-before-blocks": [2, "always"],
		"no-trailing-spaces": "error",
		"no-plusplus": "error",
		"no-var": "error",
		"eqeqeq": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		]
	}
}
